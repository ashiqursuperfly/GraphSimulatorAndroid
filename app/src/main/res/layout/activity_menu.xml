<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutMenu"
    android:background="@color/backGroundLite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="s.ashiqur.graphsimulator.MenuActivity">

    <TextView
        android:id="@+id/tvCoordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonBFS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/round_button_basic"
            android:fontFamily="sans-serif-condensed"
            android:text="BFS &amp; DFS"
            android:layout_marginBottom="30dp"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/buttonHowTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/buttonBFS"
            android:layout_marginBottom="30dp"
            android:background="@color/basicButtonsLite"
            android:fontFamily="sans-serif-condensed"
            android:text="How To Use it" />


        <Button
            android:id="@+id/buttonExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/buttonBFS"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@color/basicButtonsLite"
            android:fontFamily="sans-serif-condensed"
            android:text="Exit"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>
